/* pages/login/auth.wxss */
.UCenter-bg {
    background-image: linear-gradient( 135deg, #FFE985 10%, #FA742B 100%);
    background-size: cover;
    height: 700rpx;
    display: flex;
    justify-content: center;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 500;
    text-shadow: 0 0 3px rgba(0,0,0,0.3);
  }

  .logo {
    /*border-radius: 350rpx;*/
    background: #fff;
    margin: 15rpx;
    width: 250rpx;
    height: 250rpx;
    padding: 20rpx;
  }

  .UCenter-bg::after {
    content: "";
    position: absolute;
    width: 100vw;
    height: 50vw;
    background-color: #f1f1f1;
    transform: rotate(-10deg) scale(2,2);
    bottom: -60vw;
    left: 0;
    right: 0;
    margin: auto;

  }
  .UCenter-bg text{
    opacity: 0.8;
  }
  .UCenter-bg image {
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
  }