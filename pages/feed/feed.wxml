<form bindsubmit="formSubmit" >
  <view class="cu-form-group margin-top">
		<view class="title">开始日期</view>
		<picker mode="date" value="{{date}}" name="date" start="2018-01-01" end="2030-01-01" bindchange="DateChange">
			<view class="picker">
				{{date}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">开始时间</view>
		<picker mode="time" value="{{time}}" name="time" start="09:01" end="21:01" bindchange="TimeChange">
			<view class="picker">
				{{time}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group">
		<view class="title">食物类型</view>
		<picker bindchange="PickerChange" value="{{index}}" name="foodtype" range="{{picker}}">
			<view class="picker">
				{{index?picker[index]:'禁止换行，超出容器部分会以 ... 方式截断'}}
			</view>
		</picker>
	</view>
  <view class="cu-form-group align-start">
		<view class="title">描述</view>
		<textarea maxlength="-1" disabled="{{modalName!=null}}" bindinput="textareaBInput" placeholder="多行文本输入框" name="notes" value="{{notes}}"></textarea>
	</view>
  <view class="cu-bar bg-white margin-top">
		<view class="action">
			拍个照片留恋吧
		</view>
		<view class="action">
			{{imgList.length}}/4
		</view>
	</view>
  <view class="cu-form-group">
		<view class="grid col-4 grid-square flex-sub">
			<view class="bg-img" wx:for="{{imgList}}" wx:key="{{index}}" bindtap="ViewImage" data-url="{{imgList[index].filePath}}">
				<image src='{{imgList[index].filePath}}' mode='aspectFill'></image>
				<view class="cu-tag bg-red" catchtap="DelImg" data-index="{{index}}">
					<text class="cuIcon-close"></text>
				</view>
			</view>
			<view class="solids" bindtap="ChooseImage" wx:if="{{imgList.length<4}}">
				<text class="cuIcon-cameraadd"></text>
			</view>
		</view>
	</view>
  <view class="padding flex flex-direction margin">
    <button class="cu-btn bg-white lg" form-type="submit" >保存</button>
    <button class="cu-btn bg-red margin-tb-sm lg">结束</button>
  </view>
</form>