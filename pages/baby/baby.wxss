.UCenter-bg {
  background-image: url(https://cdn.nlark.com/yuque/0/2019/jpeg/280373/1551833865977-assets/web-upload/326b9a70-7630-438b-89e4-f38e8cfafa2e.jpeg);
  background-size: cover;
  height: 480rpx;
  display: flex;
  justify-content: center;
  /* padding-top: 40rpx; */
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: rgb(0, 0, 0);
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.png{
  border-radius: 50%
}