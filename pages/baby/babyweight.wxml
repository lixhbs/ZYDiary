<!--pages/baby/babyweight.wxml-->
<form bindsubmit="formSubmit">
  <view class="cu-form-group ">
		<view class="title">日期</view>
		<picker mode="date" value="{{notesdata}}" name="notesdata" start="2010-01-01" end="2030-01-01" bindchange="DateChange">
			<view class="picker">
				{{notesdata}}
			</view>
		</picker>
	</view>
	<view class="cu-form-group">
		<view class="title">体重</view>
		<input placeholder="体重" name="weight" type="digit" value="{{weight}}" class="text-right"></input>
    <text class="text-black">Kg</text>
	</view>
  <view class="padding flex flex-direction margin">
    <button class="cu-btn bg-gradual-orange lg button-hover" form-type="submit" >添加</button>
  </view>
</form>
